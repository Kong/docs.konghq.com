{
  "private": true,
  "version": "1.0.0",
  "name": "docs.konghq.com",
  "homepage": "https://docs.konghq.com",
  "repository": "Kong/docs.konghq.com",
  "license": "proprietary",
  "scripts": {
    "dev": "foreman start",
    "pdk-docs": "KONG_PATH=${KONG_PATH:=} KONG_VERSION=${KONG_VERSION:=} gulp pdk-docs",
    "test": "jest",
    "test:smoke": "npm run test"
  },
  "standard": {
    "ignore": [
      "dist/**",
      "vendor/**",
      "node_modules/**",
      "Dockerfile",
      "app/_assets/javascripts/*",
      "app/_redirects"
    ]
  },
  "devDependencies": {
    "broken-link-checker": "0.7.8",
    "browser-sync": "2.29.3",
    "cheerio": "1.0.0-rc.12",
    "cloudflare": "2.9.1",
    "del": "6.1.1",
    "fancy-log": "2.0.0",
    "jest": "29.6.1",
    "less": "^4.1.3",
    "lodash": "4.17.21",
    "node-fetch": "2.6.12",
    "prettier": "3.0.0",
    "skeleton-css": "2.0.4",
    "vite": "^4.3.9",
    "vite-plugin-ruby": "^3.2.2"
  },
  "jest": {
    "testMatch": [
      "**/tests/**.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__utils__/customMatchers.js",
      "<rootDir>/tests/__utils__/fetchPage.js"
    ],
    "testPathIgnorePatterns": [
      "/__utils__/"
    ]
  },
  "dependencies": {
    "@segment/analytics-next": "1.53.1",
    "js-cookie": "^3.0.1"
  }
}
