{
  "private": true,
  "version": "1.0.0",
  "name": "docs.konghq.com",
  "homepage": "https://docs.konghq.com",
  "repository": "Kong/docs.konghq.com",
  "license": "proprietary",
  "scripts": {
    "dev": "bundle exec foreman start",
    "test": "jest",
    "test:smoke": "npm run test"
  },
  "standard": {
    "ignore": [
      "dist/**",
      "vendor/**",
      "node_modules/**",
      "Dockerfile",
      "app/_assets/javascripts/*",
      "app/_redirects"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^5.0.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "broken-link-checker": "0.7.8",
    "browser-sync": "3.0.2",
    "cheerio": "1.0.0-rc.12",
    "cloudflare": "2.9.1",
    "del": "6.1.1",
    "fancy-log": "2.0.0",
    "jest": "29.7.0",
    "less": "^4.1.3",
    "lodash": "4.17.21",
    "node-fetch": "2.7.0",
    "postcss-custom-properties": "^13.3.6",
    "prettier": "3.2.5",
    "sass": "^1.63.6",
    "skeleton-css": "2.0.4",
    "vite": "^5.0.0",
    "vite-plugin-ruby": "^5.0.0"
  },
  "jest": {
    "testMatch": [
      "**/tests/**.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__utils__/customMatchers.js",
      "<rootDir>/tests/__utils__/fetchPage.js"
    ],
    "testPathIgnorePatterns": [
      "/__utils__/"
    ]
  },
  "dependencies": {
    "@kong-ui-public/spec-renderer": "2.1.0",
    "@kong/kongponents": "9.0.0-alpha.113",
    "@kong/sdk-portal-js": "^2.0.0",
    "@segment/analytics-next": "1.66.0",
    "algoliasearch": "^4.20.0",
    "instantsearch.css": "^8.1.0",
    "jquery": "3.7.1",
    "js-cookie": "^3.0.1",
    "js-yaml": "^4.1.0",
    "vue": "^3.3.4",
    "vue-instantsearch": "^4.12.1",
    "vue-router": "^4.2.4"
  }
}
