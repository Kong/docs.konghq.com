{
  "private": true,
  "version": "1.0.0",
  "name": "docs.konghq.com",
  "homepage": "https://docs.konghq.com",
  "repository": "Kong/docs.konghq.com",
  "license": "proprietary",
  "scripts": {
    "deploy": "gulp deploy",
    "preinstall": "bundle install",
    "prestart": "npm test",
    "start": "gulp",
    "dev": "gulp dev",
    "pdk-docs": "KONG_PATH=${KONG_PATH:=} KONG_VERSION=${KONG_VERSION:=} gulp pdk-docs",
    "test": "standard && echint --verbose"
  },
  "standard": {
    "ignore": [
      "dist/**",
      "vendor/**",
      "node_modules/**",
      "gulpfile.js",
      "app/_assets/javascripts/app.js"
    ]
  },
  "echint": {
    "ignore": [
      "Makefile",
      "dist/**",
      "app/*.x/**",
      "app/enterprise/**/*",
      "app/_assets/images/**",
      "app/_assets/fonts/**",
      "app/license/index.md",
      "ldoc/*",
      "Gemfile.lock",
      "autodoc-admin-api/*.lua",
      "autodoc-conf/*.lua",
      "vendor/**",
      "node_modules/**"
    ]
  },
  "devDependencies": {
    "bootstrap": "^4.3.1",
    "browser-sync": "^2.9.1",
    "cloudflare": "2.4.1",
    "del": "^4.1.0",
    "echint": "^4.0.2",
    "fancy-log": "^1.3.0",
    "font-awesome": "^4.4.0",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.3",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-less": "^4.0.1",
    "gulp-load-plugins": "^1.0.0-rc.1",
    "gulp-minify": "3.1.0",
    "gulp-plumber": "^1.0.1",
    "gulp-purifycss": "^0.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-resource-hints": "^0.2.1",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "list-assets": "0.0.2",
    "lodash": "^4.17.4",
    "run-sequence": "^2.2.1",
    "skeleton-css": "^2.0.4",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "gulp": "3.9.1"
  }
}
